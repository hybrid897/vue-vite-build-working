{
  "$schema": "https://json.schemastore.org/prettierrc",
  "semi": false,
  "tabWidth": 2,
  "singleQuote": true,
  "printWidth": 100,
  "trailingComma": "none",
  "plugins": [
    "prettier-plugin-tailwindcss", 
    "prettier-plugin-classnames",
    "prettier-plugin-organize-attributes",
    "prettier-plugin-merge"
  ],
  "attributeGroups": [
    "^(:|v-)is$",
    "^v-for$",
    "^v-(if|else-if|else|show|cloak)$",
    "^v-(once|pre|memo)$",
    "^:?id$",
    "^:?key$",
    "^:?ref$",
    "^(v-)?slot$",
    "^#",
    "^v-model$",
    "^v-(?!bind|on|html|text)",
    "^class$",
    "^(v-bind)?:class$",
    "^((v-bind)?:)?(?!data-|v-|:|@|#)",
    "$DEFAULT",
    "^((v-bind)?:)?data-",
    "^v-bind$",
    "^v-on",
    "^@",
    "^v-html$",
    "^v-text$"
  ],
	"overrides": [
		{
			"files": ["**/*.vue"],
			"options": {
				"singleAttributePerLine": true
			}
		}
	]
}